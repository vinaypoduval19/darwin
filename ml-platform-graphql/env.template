# Server Configuration
PORT=4000
NODE_ENV=development

# Default Service Host (fallback)
DEFAULT_SERVICE_HOST=http://localhost:8000

# Logging Configuration
LOG_LEVEL=info
CURL_LOGGING=false

# GraphQL Configuration
ENABLE_PLAYGROUND=true
ENABLE_INTROSPECTION=true
ENABLE_MOCKS=false
ENABLE_TRACING=false

# === Service Hosts Configuration ===
# Replace all placeholders with your actual values:
# - <service-name>: Your actual service hostname (e.g., darwin-workspace, ml-workspace, etc.)
# - <domain>: Your organization's domain (e.g., company, internal, etc.)
# - <team>: Your team identifier (e.g., mlp, ml-team, etc.)
# - <service-ip>: IP address for services without DNS

# Workspace Service
DARWIN_WORKSPACE_SERVICE_HOST=http://<workspace-service>.<domain>.local
MLP_WORKSPACE_STAG=http://<workspace-service>-<team>-stag.<domain>-stag.local
MLP_WORKSPACE_UAT=http://<workspace-service>-uat.<domain>.local
MLP_WORKSPACE_PROD=http://<workspace-service>.<domain>.local

# Compute Service (Primary ML Platform Compute Service)
DARWIN_COMPUTE_SERVICE_HOST=http://<compute-service>.<domain>.local
MLP_COMPUTE_STAG=http://<compute-service>-<team>-stag.<domain>-stag.local
MLP_COMPUTE_UAT=http://<compute-service>-uat.<domain>.local
MLP_COMPUTE_PROD=http://<compute-service>.<domain>.local

# Workflows Service
DARWIN_WORKFLOWS_SERVICE_HOST=http://<workflow-service>.<domain>.local
MLP_WORKFLOWS_STAG=http://<workflow-service>-<team>-stag.<domain>-stag.local
MLP_WORKFLOWS_UAT=http://<workflow-service>-uat.<domain>.local
MLP_WORKFLOWS_PROD=http://<workflow-service>.<domain>.local

# Data Catalog Service
DARWIN_DATA_CATALOG_SERVICE_HOST=http://<data-catalog-service>.<domain>.local

# Feature Store Service
FEATURE_STORE_SERVICE_HOST=http://<feature-registry-service>.<domain>.local
FEATURE_STORE_V2=http://<feature-store-v2>.<domain>.local:8000
MLP_FEATURE_STORE_SERVICE_HOST=http://<feature-store-app-layer>.<domain>.local

# ML Flow / Experimentation
MLP_EXPERIMENTATION=http://<mlflow-service>.<domain>.local
MLP_ML_FLOW_STAG=http://<mlflow-service>-<team>-stag.<domain>-stag.local
MLP_ML_FLOW_UAT=http://<mlflow-service>-uat.<domain>.local
MLP_ML_FLOW_PROD=http://<mlflow-service>.<domain>.local
ML_FLOW_AUTH_TOKEN=

# BYOR (Bring Your Own Runtime)
MLP_BYOR_STAG=http://<byor-service-ip>:8000
MLP_BYOR_UAT=http://<byor-service>-uat.<domain>.local
MLP_BYOR_PROD=http://<byor-service>.<domain>.local

# ML On Edge
MLP_ON_EDGE_STAG=http://<edge-service>-<team>-01.<domain>-stag.local
MLP_ON_EDGE_UAT=http://<edge-service>-uat.<domain>.local
MLP_ON_EDGE_PROD=http://<edge-service>.<domain>.local

# Chronos
MLP_CHRONOS=http://<chronos-service>.<domain>.local
MLP_CHRONOS_STAG=http://<chronos-service>-<team>-stag.<domain>-stag.local
MLP_CHRONOS_UAT=http://<chronos-service>-uat.<domain>.local
MLP_CHRONOS_PROD=http://<chronos-service>.<domain>.local

